<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="all_categories_list" name="Products">
        <t t-call="website.layout">
            <div class="container pt-3 categories-list">
                <t t-call="cap_eshop.breadcrumb" />
                <t t-foreach="category_products" t-as="parent">
                    <div class="my-5">
                        <a class="d-block text-center text-decoration-none text-dark fs-3 fw-bold" t-att-href="'/shop/category/%s' % (parent['category'].id)" t-esc="parent['category'].name"/>
                        <div class="row mx-0">
                            <t t-foreach="parent['children']" t-as="category">
                                <div class="card col-lg-2 p-0 text-center rounded-0">
                                    <img class="card-img-top" t-att-src="'/web/image/product.public.category/%s/image_256' % category.id" t-att-alt="category.name" />
                                    <div class="card-body">
                                        <a t-att-href="'/shop/category/%s' % (category.id)" >
                                            <t t-esc="category.name" />
                                        </a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
    <template id="children_categories_list" name="Products | Categories">
        <t t-call="website.layout">
            <div class="container pt-5 children-categories-list">
                <t t-call="cap_eshop.breadcrumb">
                    <t t-set="category" t-value="category" />
                </t>
                <h2 t-if="category" t-esc="category.name" class="fw-bold mt-5"/>
                <div class="row my-4">
                    <ul class="list-group list-group-flush col-4">
                        <t t-foreach="category_products" t-as="category">
                            <li class="list-group-item bg-transparent">
                                <t t-if="category.child_id">
                                    <a t-att-href="'/shop/category/' + str(category.id)">
                                        <t t-esc="category.name" />
                                    </a>
                                </t>
                                <t t-else="">
                                    <a t-att-href="'/shop/category/' + str(category.id)">
                                        <t t-esc="category.name" />
                                    </a>
                                </t>
                            </li>
                        </t>
                    </ul>
                    <div class="col-8">
                        <div class="row">
                            <t t-foreach="category_products" t-as="category">
                                <div class="card col-lg-3 col-md-4 p-0 text-center rounded-0">
                                    <img class="card-img-top" t-att-src="'/web/image/product.public.category/%s/image_256' % category.id" t-att-alt="category.name" />
                                    <div class="card-body">
                                        <a t-att-href="'/shop/category/' + str(category.id)">
                                            <t t-esc="category.name" />
                                        </a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="breadcrumb">
        <ol class="breadcrumb d-none d-lg-flex w-100 p-0 small">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/shop">Products</a>
            </li>
            <t t-if="category">
                <t t-foreach="category.parents_and_self" t-as="cat">
                    <li t-if="cat == category" class="breadcrumb-item">
                        <span class="d-inline-block" t-field="cat.name"/>
                    </li>
                    <li t-else="" class="breadcrumb-item">
                        <a t-att-href="'/shop/category/' + str(cat.id)" t-field="cat.name"/>
                    </li>
                </t>
            </t>
        </ol>
    </template>
</odoo>
