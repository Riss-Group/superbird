<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="all_categories_list" name="Products">
        <t t-call="website.layout">
            <div class="container categories-list">
                <t t-call="cap_eshop.breadcrumb" />
                <t t-foreach="category_products" t-as="parent">
                    <div class="category-item">
                        <a t-att-href="'/shop/category/%s' % (parent['category'].id)" t-esc="parent['category'].name"/>
                        <div class="row">
                            <t t-foreach="parent['children']" t-as="category">
                                <a t-att-href="'/shop/category/%s' % (category.id)" class="card col-lg-2">
                                    <img class="card-img-top" t-att-src="'/web/image/product.public.category/%s/image_256' % category.id" t-att-alt="category.name" />
                                    <div class="card-body">
                                        <span>
                                            <t t-esc="category.name" />
                                        </span>
                                    </div>
                                </a>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
    <template id="children_categories_list" name="Products | Categories">
        <t t-call="website.layout">
            <div class="container children-categories-list">
                <t t-call="cap_eshop.breadcrumb">
                    <t t-set="category" t-value="category" />
                </t>
                <h1 t-if="category" t-esc="category.name" class="fw-bold mt-5"/>
                <div class="row my-4">
                    <div class="col-12 col-lg-4">
                        <ul class="list-unstyled eshop-categories-list">
                            <t t-foreach="category_products" t-as="category">
                                <li>
                                    <t t-if="category.child_id">
                                        <a t-att-href="'/shop/category/' + str(category.id)">
                                            <t t-esc="category.name" />
                                        </a>
                                    </t>
                                    <t t-else="">
                                        <a t-att-href="'/shop/category/' + str(category.id)">
                                            <t t-esc="category.name" />
                                        </a>
                                    </t>
                                </li>
                            </t>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="row">
                            <t t-foreach="category_products" t-as="category">
                                <a t-att-href="'/shop/category/' + str(category.id)" class="card col-md-4 col-lg-3">
                                    <img class="card-img-top" t-att-src="'/web/image/product.public.category/%s/image_256' % category.id" t-att-alt="category.name" />
                                    <div class="card-body">
                                        <span t-esc="category.name" />
                                    </div>
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/shop">Products</a>
            </li>
            <t t-if="category">
                <t t-foreach="category.parents_and_self" t-as="cat">
                    <li t-if="cat == category" class="breadcrumb-item">
                        <span class="d-inline-block" t-field="cat.name"/>
                    </li>
                    <li t-else="" class="breadcrumb-item">
                        <a t-att-href="'/shop/category/' + str(cat.id)" t-field="cat.name"/>
                    </li>
                </t>
            </t>
        </ol>
    </template>
</odoo>
