<odoo>
    <record id="view_ai_model_config_tree" model="ir.ui.view">
        <field name="name">ai.model.config.tree</field>
        <field name="model">ai.model.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model"/>
                <field name="max_tokens"/>
                <field name="temperature"/>
            </tree>
        </field>
    </record>

    <record id="view_ai_model_config_form" model="ir.ui.view">
        <field name="name">ai.model.config.form</field>
        <field name="model">ai.model.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model"/>
                        <field name="api_key" password="True"/>
                        <field name="max_tokens"/>
                        <field name="temperature"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_model_config" model="ir.actions.act_window">
        <field name="name">AI Models</field>
        <field name="res_model">ai.model.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ai_configuration" name="AI Configuration" parent="base.menu_config" sequence="10"/>
    <menuitem id="menu_ai_model_config" name="AI Models" parent="menu_ai_configuration" action="action_ai_model_config"/>
</odoo>
