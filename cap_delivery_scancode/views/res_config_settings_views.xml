<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_stock_delivery_scancode" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.scancode</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='shipping_connectors_setting_container']" position="inside">
               <setting id="shipping_method_scancode" help="Compute shipping costs and ship with Scancode">
                    <div class="content-group">
                        <div class="mt8">
                            <div class="o_form_label">
                                <span searchabletext="Scancode Connector">Scancode Connector</span>
                            </div>
                            <span class="text-muted">Compute shipping costs and ship with Scancode</span>
                            <button name="539" icon="oi-arrow-right" type="action" string="Scancode Shipping Methods"
                                    class="btn-link" context="{'search_default_delivery_type': 'scancode'}"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
