<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="reordering_rule_python_code_view_form" model="ir.ui.view">
        <field name="name">reordering_rule_python_code_view_form</field>
        <field name="model">reordering.rule.python.code</field>
        <field name="arch" type="xml">
            <form string="Reordering Rule Python Code">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="True"/>
                        </h1>
                    </div>
                    <group>
                        <field name="python_code" required="True" widget="code" options="{'mode': 'python'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="reordering_rule_python_code_view_tree" model="ir.ui.view">
        <field name="name">reordering_rule_python_code_view_tree</field>
        <field name="model">reordering.rule.python.code</field>
        <field name="arch" type="xml">
            <tree string="Reordering Rule Python Code">
                <field name="name" />
                <field name="python_code"  widget="code" options="{'mode': 'python'}"/>
            </tree>
        </field>
    </record>
</odoo>