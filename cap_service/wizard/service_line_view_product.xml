<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="service_line_view_product_view_form" model="ir.ui.view">
        <field name="name">service_line_view_product_view_form</field>
        <field name="model">service.line.view.product</field>
        <field name="arch" type="xml">
            <form string="Service Line View Product">
                <group>
                    <field name="service_order_line_id"/>
                    <field name="service_order_id" readonly='1' force_save='1' />
                </group>
                <group string="Items">
                    <field name="service_order_line_item_ids"
                           context="{'default_service_order_line_id': service_order_line_id}">
                        <tree editable='bottom'>
                            <field name='service_order_line_id' column_invisible="1" force_save="1"/>
                            <field name='product_id' domain="[('type', '=', 'product')]"/>
                            <field name='product_type' column_invisible="1"/>
                            <field name='quantity'/>
                            <field name='unit_price'/>
                            <field name='warranty_coverage'/>
                        </tree>
                    </field>
                </group>
                <group string="Labor">
                    <field name="service_order_line_labor_ids"
                           context="{'default_service_order_line_id': service_order_line_id}">
                        <tree editable='bottom'>
                            <field name='service_order_line_id' column_invisible="1" force_save="1"/>
                            <field name='product_id' domain="[('type', '=', 'service')]"/>
                            <field name='product_type' column_invisible="1"/>
                            <field name='quantity'/>
                            <field name='unit_price'/>
                            <field name='warranty_coverage'/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_save" string='Save' class="oe_highlight" type='object'/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>