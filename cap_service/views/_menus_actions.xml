<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_order_action" model="ir.actions.act_window">
            <field name="name">Service Order</field>
            <field name="res_model">service.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_filter_service_todo':1}</field>
        </record>

        <record id="service_template_action" model="ir.actions.act_window">
            <field name="name">Service Templates</field>
            <field name="res_model">service.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="service_template_type_action" model="ir.actions.act_window">
            <field name="name">Service Template Type</field>
            <field name="res_model">service.template.type</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="project.action_view_all_task" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,form,calendar,pivot,graph,activity</field>
            <field name="context">{'search_default_open_tasks': 1, 'default_user_ids': [(4, uid)]}</field>
        </record>

        <record id="project.open_view_all_task_list_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
        </record>

        <menuitem id="service_order_main_menu" name="Repair Orders"  web_icon="cap_service,static/description/bus_icon_sb.png" groups="cap_service.group_service_user" sequence="60" />
        <menuitem id="service_order_menu_menu" name="Repair Orders" parent="service_order_main_menu"  sequence="0"/>
        <menuitem id="service_order_config_menu" name="Configuration" parent="service_order_main_menu"  groups="cap_service.group_service_manager" sequence="0"/>
        <menuitem id="service_order_template_menu" name="Service Templates" parent="service_order_config_menu"  sequence="0"/>
        <menuitem id="service_template_action_menu" name="Service Templates" action="service_template_action"  parent="service_order_template_menu" sequence="10"/>
        <menuitem id="service_template_type_action_menu" name="Service Template Type" action="service_template_type_action"  parent="service_order_template_menu" sequence="10"/>
        <menuitem id="service_order_action_menu" name="Repair Orders" action="service_order_action"  parent="service_order_menu_menu" sequence="10"/>
    </data>
</odoo>
