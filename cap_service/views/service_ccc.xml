<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="service_ccc_form_view" model="ir.ui.view">
            <field name="name">view_service_ccc_form_view</field>
            <field name="model">service.ccc</field>
            <field name="arch" type="xml">
                <form string="Service Template">
                    <sheet>
                        <group name="group_container" >
                            <field name="name" />
                            <field name="cause" />
                            <field name="correction" />
                            <field name="project_id" />
                        </group>
                        <field name='service_template_parts'>
                            <tree editable='bottom'>
                                <field name='product_id'/>
                                <field name='quantity' />
                            </tree>
                        </field>
                        <field name='service_template_service'>
                            <tree editable='bottom'>
                                <field name='product_id'/>
                                <field name='quantity' />
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="service_order_ccc_view" model="ir.ui.view">
            <field name="name">service_order_ccc_view</field>
            <field name="model">service.ccc</field>
            <field name="arch" type="xml">
                <tree string="Service Template">
                    <field name="name" />
                    <field name="cause" />
                    <field name="correction" />
                    <field name='project_id'/>
                </tree>
            </field>
        </record>
    </data>
</odoo>