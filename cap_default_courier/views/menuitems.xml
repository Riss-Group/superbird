<odoo>
	<data>
		<record id="view_delivery_courier_tree" model="ir.ui.view">
			<field name="name">delivery.courier.tree</field>
			<field name="model">delivery.courier</field>
			<field name="arch" type="xml">
				<tree>
					<field name="id" optional="hide"/>
					<field name="name"/>
					<field name="type" optional="hide"/>
				</tree>
			</field>
		</record>

		<record id="action_default_couriers" model="ir.actions.act_window">
            <field name="name">Default Couriers</field>
            <field name="res_model">delivery.courier</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_delivery_courier_tree"/>
            <field name="domain">[('type', '=', 'courier')]</field>
			<field name="context">{'default_type': 'courier'}</field>
            <field name="help" type="html">
                <p>
                    Use this view to manage your Default Couriers.
                </p>
            </field>
        </record>

        <record id="action_default_ltl" model="ir.actions.act_window">
            <field name="name">Default LTL</field>
            <field name="res_model">delivery.courier</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_delivery_courier_tree"/>
            <field name="domain">[('type', '=', 'ltl')]</field>
			<field name="context">{'default_type': 'ltl'}</field>
            <field name="help" type="html"> <p>
                    Use this view to manage your Default LTL couriers.
                </p>
            </field>
        </record>

        <menuitem id="menu_config_default_couriers_ltl"
                  name="Default Couriers/LTL"
                  parent="contacts.res_partner_menu_config"
                  sequence="7"/>

        <menuitem id="menu_config_default_couriers"
                  name="Default Couriers"
                  parent="menu_config_default_couriers_ltl"
                  sequence="1"
                  action="action_default_couriers"/>

        <menuitem id="menu_config_default_ltl"
                  name="Default LTL"
                  parent="menu_config_default_couriers_ltl"
                  sequence="2"
                  action="action_default_ltl"/>
	</data>
</odoo>
