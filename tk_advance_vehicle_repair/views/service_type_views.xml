<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="service_type_form_view" model="ir.ui.view">
            <field name="name">service.type.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position='after'>
                    <field name="color" widget="color_picker"/>
                </xpath>
                <xpath expr="//label[@for='purchase_ok']" position="after">
                    <span class="d-inline-block">
                        <field name="is_vehicle_part"/>
                        <label for="is_vehicle_part"/>
                    </span>
                </xpath>
            </field>
        </record>
        <record id="action_vehicle_spare_parts" model="ir.actions.act_window">
            <field name="name">Spare Parts</field>
            <field name="res_model">product.product</field>
            <field name="domain">[('is_vehicle_part', '=', True)]</field>
            <field name="context">{'default_is_vehicle_part': True}</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>

