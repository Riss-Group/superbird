<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="inspection_vehicle_details_form_view" model="ir.ui.view">
            <field name="name">inspection.vehicle.details.form.view</field>
            <field name="model">inspection.vehicle.details</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="vehicle_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="fleet_vehicle_id" invisible="vehicle_type != 'fleet_vehicle'"/>
                            <field name="customer_id" invisible="1"/>
                            <field name="register_vehicle_id" invisible="vehicle_type != 'customer_vehicle'"/>
                        </group>
                        <group>
                            <field name="inspection_job_card_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Vehicle Details">
                        <group>
                            <field name="vehicle_brand_id" required="1"/>
                            <field name="registration_no" required="1"/>
                            <field name="vehicle_fuel_type_id" required="1"/>
                        </group>
                        <group>
                            <field name="vehicle_model_id" required="1"/>
                            <field name="vin_no"/>
                            <field name="transmission_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Add Vehicle" name="action_add_vehicle_details" type="object"
                                class="oe_highlight" invisible="vehicle_type == 'customer_vehicle' and register_vehicle_id == False"/>
                        <button string="Register Vehicle &amp; Add" name="action_add_vehicle_details" type="object"
                                class="oe_highlight"
                                invisible="vehicle_type != 'customer_vehicle' or register_vehicle_id != False"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_inspection_vehicle_details" model="ir.actions.act_window">
            <field name="name">Vehicle Details</field>
            <field name="res_model">inspection.vehicle.details</field>
            <field name="target">new</field>
            <field name="view_id" ref="inspection_vehicle_details_form_view"/>
        </record>
    </data>
</odoo>
