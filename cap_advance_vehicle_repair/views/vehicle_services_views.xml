<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="vehicle_service_form_view_cap" model="ir.ui.view">
            <field name="name">vehicle_service_form_view_cap</field>
            <field name="model">vehicle.service</field>
            <field name='inherit_id' ref='tk_advance_vehicle_repair.vehicle_service_form_view'/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet/group/group" position="inside">
                    <field name = 'vehicle_complaint_id' />
                    <field name = 'vehicle_cause_id' />
                    <field name = 'vehicle_correction_id' />
                </xpath>
                <xpath expr="//field[@name='service_charge']" position="after">
                    <field name="description" placeholder="e.g. Description" />
                </xpath>
            </field>
        </record>

        <record id="vehicle_service_tree_view_cap" model="ir.ui.view">
            <field name="name">vehicle_service_tree_view_cap</field>
            <field name="model">vehicle.service</field>
            <field name='inherit_id' ref='tk_advance_vehicle_repair.vehicle_service_tree_view'/>
            <field name="arch" type="xml">
                <xpath expr="//tree[1]" position="attributes">
                    <attribute name="editable"/>
                </xpath>
                <xpath expr="//tree/field[@name='color']" position="before">
                    <field name = 'description' />
                    <field name = 'vehicle_complaint_id' />
                    <field name = 'vehicle_cause_id' />
                    <field name = 'vehicle_correction_id' />
                </xpath>
            </field>
        </record>
    </data>
</odoo>