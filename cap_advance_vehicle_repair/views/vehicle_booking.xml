<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="vehicle_booking_form_view_cap" model="ir.ui.view">
            <field name="name">vehicle_booking_form_view_cap</field>
            <field name="model">vehicle.booking</field>
            <field name="inherit_id" ref="tk_advance_vehicle_repair.vehicle_booking_form_view"/>
            <field name="arch" type="xml">
                <xpath expr='//sheet' position='inside'>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_odometer" icon="fa-tachometer">
                            <field string="Odometer Readings" name="fleet_odometer_count" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
                <xpath expr="//field[@name='customer_id']" position='attributes'>
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='booking_date']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//sheet/group" position="inside">
                    <group name="warranty_info" string="Warranty Info">
                        <field name='fleet_sold_date' />
                        <field name='fleet_warranty_period' />
                        <field name='fleet_warranty_expired' />
                    </group>
                </xpath>
                <xpath expr="//field[@name='vehicle_brand_id']" position="before">
                    <field name='fleet_vehicle_id' force_save='1' readonly='1'/>
                </xpath>
                <field name="booking_source" position="after">
                    <field name="complaint_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>
    </data>
</odoo>