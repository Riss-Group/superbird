<odoo>
    <data>
        <record id="vehicle_ccc_view_form_cap" model="ir.ui.view">
            <field name="name">vehicle_ccc_view_form_cap</field>
            <field name="model">vehicle.ccc</field>
            <field name="arch" type="xml">
                <form string="Complaint Cause Correction">
                    <sheet>
                        <group>                           
                            <field name='name' />
                            <field name='description' />
                            <field name='ttype' />
                            <field name='option_num' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vehicle_ccc_view_tree_cap" model="ir.ui.view">
            <field name="name">vehicle_ccc_view_tree_cap</field>
            <field name="model">vehicle.ccc</field>
            <field name="arch" type="xml">
                <tree string="Complaint Cause Correction">
                    <field name='ttype' />
                    <field name='option_num' />
                    <field name='name' />
                    <field name='description' />
                </tree>
            </field>
        </record>

        <record id="action_vehicle_ccc" model="ir.actions.act_window">
            <field name="name">Vehicle Cause Complaint Correction</field>
            <field name="res_model">vehicle.ccc</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="vehicle_ccc_parent" name="Vehicle Cause, Complaint, Correction" parent="tk_advance_vehicle_repair.menu_configuration" sequence="3"/>

        <menuitem id="vehicle_ccc_menu" name="Cause Complaint Correction" parent="vehicle_ccc_parent" action="action_vehicle_ccc" sequence="1"/>

    </data>
</odoo>